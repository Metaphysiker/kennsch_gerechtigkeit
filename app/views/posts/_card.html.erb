<div class="card mb-2 h-100 rounded-0">
  <% if post.cover.attached? %>
    <%= image_tag post.cover, class: "card-img-top" %>
  <% end %>

  <div class="card-body d-flex flex-column bg-b-color">
    <p class="card-text text-dark">
      <%= l(post.created_at, format: "%d.%m.%Y") %>
      <span class="badge bg-e-color rounded-0 text-white">
        <%= "Mitteilungen".upcase %>
      </span>
    </p>
    <h5 class="card-title spaced-letters"><%= post.title.upcase %></h5>
    <p class="card-text text-dark"><%= post.description %></p>

    <a href="<%= post_path(post) %>" class="btn btn-sm btn-block btn-e-color rounded-0 spaced-letters text-nowrap" style="margin-top: auto;">Mehr erfahren <i class="fas fa-chevron-right"></i></a>

  </div>
</div>
